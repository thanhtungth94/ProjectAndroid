<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView android:layout_width="match_parent"
              android:layout_weight="5"
              android:id="@+id/lvAudio"
        android:background="#478c9e"
              android:layout_height="0dp">
    </ListView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
        android:background="#3b82b6"
                  android:layout_height="0dp">

        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:text="Sáo Trúc "
                  android:textColor="@android:color/black"
                  android:gravity="center"
                  android:id="@+id/tvTitle"
                  android:layout_height="0dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:text="Lô Thanh Tùng"
                  android:textColor="@android:color/black"
                  android:gravity="center"
                  android:id="@+id/tvCasi"
                  android:layout_height="0dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:text="0/0"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:id="@+id/tvTime"
                  android:layout_height="0dp"/>

        <SeekBar android:layout_width="match_parent"
                 android:layout_weight="1"
                 android:thumb="@null"
                 android:id="@+id/seekbar"
                 android:layout_height="0dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:layout_height="0dp">

            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:text="00:00"
                      android:id="@+id/tvTimeNow"
                      android:textColor="@android:color/black"
                      android:gravity="center"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="0dp"
                      android:layout_weight="6"
                      android:layout_height="match_parent"/>

            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:text="00:00"
                      android:id="@+id/tvTotalTime"
                      android:textColor="@android:color/black"
                      android:gravity="center"
                      android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
        android:background="#3b82b6"
                  android:layout_height="0dp">

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/imvPrevious"
                   android:src="@drawable/skip_previous"
                   android:scaleType="centerInside"
                   android:layout_height="wrap_content"/>

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/imvPlay"
                   android:src="@drawable/play_circle_outline"
                   android:scaleType="centerInside"
                   android:layout_height="wrap_content"/>

        <ImageView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/imvNext"
                   android:src="@drawable/skip_next"
                   android:scaleType="centerInside"
                   android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/imageStop"
            android:src="@drawable/stop"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"/>



    </LinearLayout>



</LinearLayout>

