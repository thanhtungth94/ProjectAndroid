<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thanhtung.thanhtung_tiente">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Currency"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Chart"
            android:label="@string/title_activity_chart"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Convert"
            android:label="@string/title_activity_convert"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Ratings"
            android:label="@string/title_activity_ratings"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".DetailCurrency"
            android:label="@string/title_activity_detailcurrency"
            android:parentActivityName=".Currency"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FullScreen" >
        </activity>
        <activity android:name=".ShareCurrency"/>
    </application>

</manifest>